<h3 class="ui header">{{t "forms.i-i-s-a-z-s-kursach-чек-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-a-z-s-kursach-чек-e.дата-caption"}}</label>
    {{flexberry-simpledatetime
      type="date"
      readonly=readonly
      value=model.дата
      class=(if (v-get validationModel "дата" "isInvalid") "error")
      data-test-i-i-s-a-z-s-kursach-чек-e-дата=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "дата" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.номер
      class=(if (v-get validationModel "номер" "isInvalid") "error")
      label=(t "forms.i-i-s-a-z-s-kursach-чек-e.номер-caption")
      data-test-i-i-s-a-z-s-kursach-чек-e-номер=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "номер" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-a-z-s-kursach-чек-e.клиент-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.клиент
      displayAttributeName="наимен"
      autocomplete=true
      relationName="клиент"
      projection="КлиентL"
      title=(t "forms.i-i-s-a-z-s-kursach-чек-e.клиент-caption")
      readonly=readonly
      componentName="клиентLookup"
      class=(if (v-get validationModel "клиент" "isInvalid") "error")
      data-test-i-i-s-a-z-s-kursach-чек-e-клиент=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "клиент" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.сумма
      class=(if (v-get validationModel "сумма" "isInvalid") "error")
      label=(t "forms.i-i-s-a-z-s-kursach-чек-e.сумма-caption")
      data-test-i-i-s-a-z-s-kursach-чек-e-сумма=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "сумма" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-a-z-s-kursach-чек-e.заправкаАвто-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.заправкаАвто
      displayAttributeName="колТоп"
      autocomplete=true
      relationName="заправкаАвто"
      projection="ЗаправкаАвтоL"
      title=(t "forms.i-i-s-a-z-s-kursach-чек-e.заправкаАвто-caption")
      readonly=readonly
      componentName="заправкаАвтоLookup"
      class=(if (v-get validationModel "заправкаАвто" "isInvalid") "error")
      data-test-i-i-s-a-z-s-kursach-чек-e-заправкаАвто=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "заправкаАвто" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-a-z-s-kursach-чек-e.тЧТовары-caption"}}</label>
    {{flexberry-groupedit
      componentName="тЧТоварыGroupEdit"
      mainModelProjection=modelProjection
      modelProjection=modelProjection.attributes.тЧТовары
      content=model.тЧТовары
      readonly=readonly
      orderable=false
      class=(if (v-get validationModel "тЧТовары" "isInvalid") "error")
      data-test-i-i-s-a-z-s-kursach-чек-e-тЧТовары=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "тЧТовары" "message")}}
  </div>
</form>
